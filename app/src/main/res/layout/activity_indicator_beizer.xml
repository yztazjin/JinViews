<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context="ttyy.com.jinviews.demo.MainActivity"
    android:background="#eee">

    <ttyy.com.jinviews.pagers.BeizerCircleIndicatedViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        app:indicateColor="#fff"
        app:strokeColor="#00bbaa"
        app:indicateRadius="15dp"
        app:indicateBottomMargin="45dp"
        app:indicateDistance="15dp"
        app:strokeWidth="5dp"></ttyy.com.jinviews.pagers.BeizerCircleIndicatedViewPager>

</LinearLayout>
