<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="BeizerCircleIndicatedViewPager">

        <attr name="strokeColor"
            format="color|reference"></attr>

        <attr name="strokeWidth"
            format="dimension|reference"></attr>

        <attr name="indicateColor"
            format="color|reference"></attr>
        
        <attr name="indicateRadius"
            format="dimension|reference"></attr>
            
        <attr name="indicateDistance"
            format="dimension|reference"></attr>

        <attr name="indicateBottomMargin"
            format="dimension|reference"></attr>

    </declare-styleable>

    <declare-styleable name="SwitchButton">
        <attr name="toggleStrokeWidth"
            format="dimension|reference"/>

        <attr name="toggleStrokeColor"
            format="color|reference"/>

        <attr name="toggleCircleRadius"
            format="dimension|reference"/>

        <attr name="toggleCircleMargin"
            format="dimension|reference"/>

        <attr name="toggleBarHeight"
            format="dimension|reference"/>

        <attr name="toggleTrueColor"
            format="color|reference"/>

        <attr name="toggleFalseColor"
            format="color|reference"/>

        <attr name="toggleCircleColor"
            format="color|reference"/>

        <attr name="toggleStatus"
            format="boolean|reference"/>

    </declare-styleable>

    <declare-styleable name="SlidingLeftMenu">
        <attr name="leftMenuLayerLevel">

            <enum name="top" value="0"></enum>
            <enum name="same" value="1"></enum>
            <enum name="bottom" value="2"></enum>

        </attr>
    </declare-styleable>

</resources>
